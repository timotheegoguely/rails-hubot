<%= simple_form_for (hubot), html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :gender, collection: ["female", "male"] %>
  <%= f.input :skin_color, collection: [ "white", "asian", "brown", "black"] %>
  <%= f.input :category %>
  <%= f.input :manufacturer %>
  <%= f.input :model %>
  <%= f.input :turing_test_score %>
  <%= f.input :autonomy %>
  <%= f.input :charging_time %>
  <%= f.input :price_per_hour %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit %>
<% end %>
